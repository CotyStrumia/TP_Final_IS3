# ---------- STAGE 1: Build ----------
FROM node:20 AS builder

WORKDIR /app

# ðŸ‘‡ Primero instalamos dependencias (esto permite cachear correctamente)
COPY package.json package-lock.json ./
RUN npm ci

# ðŸ‘‡ Luego copiamos el resto del cÃ³digo
COPY . .

# ðŸ‘‡ Recibe la variable de GitHub Actions
ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL

# ðŸ‘‡ Build del frontend usando la variable correcta
RUN npm run build


# ---------- STAGE 2: Static Server ----------
FROM node:20-slim

WORKDIR /app

# ðŸ‘‡ Servidor estÃ¡tico liviano
RUN npm install -g serve

# ðŸ‘‡ Traemos solo lo necesario: la carpeta dist
COPY --from=builder /app/dist ./dist

EXPOSE 3000

CMD ["serve", "-s", "dist", "-l", "3000"]
